{{#if word}}
<div class="panel panel-primary">
    <div class="panel-heading">
        <span class="pull-right">{{formatDate word.date}}</span>
        <h3 class="panel-title text-center">{{word.title}}</h3>
    </div>
    <div class="panel-body">
        <p>
            {{word.description}}
        </p>
        <hr />
        <p>
            {{word.example}}
        </p>
    </div>
</div>
{{else}}
<p>На сегодня слов больше нет</p>
{{/if}}